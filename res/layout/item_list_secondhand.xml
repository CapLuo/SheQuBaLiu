<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/second_good_page_paddingTop"
    android:paddingLeft="@dimen/second_good_page_paddingTop"
    android:paddingRight="@dimen/second_good_page_paddingTop"
    android:paddingTop="@dimen/second_good_page_paddingTop" >

    <ImageView
        android:id="@+id/_item_secondhand_img"
        android:layout_width="@dimen/second_good_page_width"
        android:layout_height="@dimen/second_good_page_width"
        android:layout_centerVertical="true"
        android:contentDescription="@drawable/icon_blue"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/_item_secondhand_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/_item_secondhand_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/_item_secondhand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/_item_secondhand_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/_item_secondhand_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>