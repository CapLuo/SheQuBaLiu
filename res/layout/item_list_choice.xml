<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/_lable_item_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/choice_margin_left"
        android:textSize="@dimen/choice_item_size" />

    <TextView
        android:id="@+id/_lable_item_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/choice_margin_left"
        android:layout_marginTop="@dimen/choice_margin_top"
        android:textSize="@dimen/choice_item_size" />

</LinearLayout>