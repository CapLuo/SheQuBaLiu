<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/conversation_margin_top" >

    <RelativeLayout
        android:id="@+id/conversation_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/conversation_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/conversation_margin_left"
            android:layout_marginRight="@dimen/conversation_margin_left"
            android:background="@drawable/conversation_commit_button"
            android:text="@string/conversation_commit"
            android:textSize="@dimen/conversation_text_size" />

        <EditText
            android:id="@+id/conversation_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/conversation_margin_left"
            android:layout_toLeftOf="@id/conversation_commit"
            android:background="@drawable/conversation_edit_background"
            android:hint="@string/conversation_hint"
            android:textSize="@dimen/conversation_text_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/conversation_bottom" >

        <LinearLayout
            android:id="@+id/conversation_content_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>